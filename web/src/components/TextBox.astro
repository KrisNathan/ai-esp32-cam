---
type HTMLInputTypeAttribute =
  | "button"
  | "checkbox"
  | "color"
  | "date"
  | "datetime-local"
  | "email"
  | "file"
  | "hidden"
  | "image"
  | "month"
  | "number"
  | "password"
  | "radio"
  | "range"
  | "reset"
  | "search"
  | "submit"
  | "tel"
  | "text"
  | "time"
  | "url"
  | "week";
interface Props {
  type: HTMLInputTypeAttribute;
  id: string;
  name: string;
  placeholder: string
}
const { type, id, name, placeholder } = Astro.props;
---

<input type={type} id={id} name={name} placeholder={placeholder} class="appearance-none p-5 text-center w-full rounded-xl bg-white dark:bg-slate-900 text-black dark:text-white shadow-inner" />
