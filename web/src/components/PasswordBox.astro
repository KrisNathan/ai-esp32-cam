---
import TextBox from "./TextBox.astro";
---

<TextBox type="password" id="password" name="password" placeholder="PASSWORD" />
<div class="flex space-x-2 text-black dark:text-white">
  <input type="checkbox" onclick="showPassword()" />
  <div>Show Password</div>
</div>

<script is:inline>
  function showPassword() {
    var x = document.getElementById("password");
    if (x.type === "password") {
      x.type = "text";
    } else {
      x.type = "password";
    }
  }
</script>
